<!-- views/tabla_p1.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Tabla Generada</title>
    <style>
        table {
            border-collapse: collapse;
        }
        td {
            width: 20px;
            height: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Tabla Generada</h1>
    <table border="1">
        <% for (let i = 0; i < alto; i++) { %>
            <tr>
                <% for (let j = 0; j < ancho; j++) { %>
                    <td style="background-color: <%= getColor(i, j, alto, ancho) %>;" onclick="showColor(this)">&nbsp;</td>
                <% } %>
            </tr>
        <% } %>
    </table>

    <h2>CÃ³digo de Color</h2>
    <input type="text" id="colorCode" readonly>

    <h2>Redibujar Tabla</h2>
    <form action="/generar-tabla" method="POST">
        <label for="ancho">Ancho:</label>
        <input type="number" id="ancho" name="ancho" required>
        <br>
        <label for="alto">Alto:</label>
        <input type="number" id="alto" name="alto" required>
        <br>
        <button type="submit">Redibujar Tabla</button>
    </form>

    <script>
        function showColor(cell) {
            const color = cell.style.backgroundColor;
            document.getElementById('colorCode').value = color;
        }
    </script>
</body>
</html>
